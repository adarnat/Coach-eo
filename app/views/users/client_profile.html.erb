<div class="flex-show-booking">
  <div class="user_info">
    <div>
      <img src="<%= @client.avatar_url %>" class="img-client" alt="Admin" >
    </div>
    <div class="info-client">
      <h1><%= @client.first_name %> <%= @client.last_name %></h1>
      <h6> <%= @client.email %></h6>
    </div>
  </div>

  <div class="stat-paiements">
    <div class="paiement-card-total">
    <h6>Somme totale des cours réservés</h6>
      <h4><%= @bookings.map {|b| b.time_slot_price }.sum %>€</h4>
    </div>
    <div class="paiement-card-impayés">
    <h6>Somme des cours en attente de paiement</h6>
    <h4> <%=@bookings.filter{ |b| b.payment_received == false}.map {|b| b.time_slot_price }.sum %>€</h4>
    </div>
  </div>
</div>

<div class="details-top">
  <h4>Voici les cours auxquels a participé <%= @client.first_name %> : </h4>
</div>

<div class="bookings-history">
  <% @bookings.each do |booking| %>
    <div class="details-client">
      <div class="date-sport">
        <h6><%= humanize(booking.time_slot.start_at) %></h6>
      </div>
       <div class="date-sport">
        <h6> <%= humanize_hours(booking.time_slot.start_at)  %> - <%= humanize_hours(booking.time_slot.end_at)  %></h6>
       </div>
      <div class="name-sport">
        <h5><%= booking.time_slot.sport_class.name %></h5>
      </div>
      <% if booking.payment_received? %>
        <div class="item-timeslot-details-show">
          <h5><%= booking.time_slot.sport_class.price %> €</h5>
          <%= link_to "Payé", booking_path(booking, choice: false, redirect: "client"), method: :put, data: { confirm: "Êtes vous sûr(e) de passer le statut du paiement en impayé?"}, class:"payé" %>
        </div>
      <% else %>
        <div class="item-timeslot-details-show">
          <h5><%= booking.time_slot.sport_class.price %> €</h5>
          <%= link_to "Impayé", booking_path(booking, choice: true, redirect: "client"), method: :put, data: { confirm: "Êtes vous sûr(e) de passer le statut du paiement en payé?"}, class:"impayé" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
