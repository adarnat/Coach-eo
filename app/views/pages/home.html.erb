
    <div class="titre">
      <% if current_user.nil? %>
        <p>Merci de vous connecter à votre espace coach</p>
      <% else %>
       <h1>Bienvenue <%=current_user.first_name %>!</h1>


      <div class="box">
        <div class="clock">
          <span class="seconds"></span>
          <span class="hours"></span>
          <span class="minutes"></span>
        </div>
        <div class="date">
          <div id="daymonth"><%= l Date.today, format: '%d %B' %></div>
          <div id="year"><%= l Date.today, format: '%Y' %></div>
        </div>
      </div>
    </div>
       <%# <div class="calendar">
       <i class="far fa-calendar"></i>
       <h2 class="calendar-date">  <%= Date.today.strftime('%d.%m.%Y') %>
       <%# </div> %>


      <div class="card-features">
        <div class="card-slot-top">
        <h6>Horaire</h6>
        <div class="width"><h6>Nom de la séance</h6></div>
        <h6>Niveau</h6>
        <h6>Capacité</h6>
        <h6>Réservations</h6>
      </div>
            <% @time_slots.each do |time_slot| %>
              <div class="card-slot">
                <div class="item-timeslot"><p><%= time_slot.start_at.strftime('%H:%M') %> - <%= time_slot.end_at.strftime('%H:%M') %></p></div>
                <div class="width overflow-auto "><p><%= time_slot.name %></p></div>
                <div class="item-timeslot"><p><%= time_slot.level %></p></div>
                <div class="item-timeslot"><p><%= time_slot.group_size %><i class="fas fa-user-friends"></i></p></div>
                <div class="item-timeslot"> <p><a class="btn btn-primary" data-toggle="collapse" href="#collapseExample-<%= time_slot.id %>" role="button" aria-expanded="false" aria-controls="collapseExample"> Réservations </a></p></div>
              </div>
                <div class="collapse" id="collapseExample-<%= time_slot.id %>">
                  <div class="card-body-client">
                          <div class="card-slot-top-details">
                          <h6>Clients</h6>
                          <h6>mails</h6>
                          <h6>Prix/ personne</h6>
                          <h6 class="width">Statut du paiement</h6>
                        </div>
                  <% time_slot.bookings.each  do |booking| %>
                  <div class="card-slot-details">
                    <div class="item-timeslot"><p> <%= booking.client.first_name%>  <%= booking.client.last_name%></p></div>
                    <div class="item-timeslot"><p><%= booking.client.email %></p></div>
                    <div class="item-timeslot"><p><%= time_slot.price %>€</p></div>
                    <% if booking.payment_received %>
                      <div class="item-timeslot-details"><p class="payé">Payé</p></div>
                    <% else %>
                      <div class="item-timeslot-details"><p class="impayé" class="width">Impayé</p></div>
                    <% end %>
                  </div>
                <% end %>
                  </div>
                </div>
            <% end %>
        </div>
      </div>
        <% end %>
  </div>
