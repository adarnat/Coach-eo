
    <div class="titre">
      <% if current_user.nil? %>
        <p>Merci de vous connecter à votre espace coach</p>
      <% else %>
       <h1>Bienvenue <%=current_user.first_name %>!</h1>


  </div>

<div class="flex">

      <div class="card-features">
<h4>Voici ton programme de la journée :</h4>
        <%# <div class="card-slot-top">
        <h6>Horaires</h6>
        <div class="width"><h6>Séance</h6></div>
        <h6>Niveau</h6>
        <h6>Réservations</h6>
      </div> %>
            <% @time_slots.each do |time_slot| %>

              <div class="card-slot" <a data-toggle="collapse" href="#collapseExample-<%= time_slot.id %>" role="button" aria-expanded="false" aria-controls="collapseExample"> </a>
                <div class="item-timeslot"><p><%= time_slot.start_at.strftime('%H:%M') %> - <%= time_slot.end_at.strftime('%H:%M') %></p></div>
                <div class="width overflow-auto "><p><%= time_slot.name %></p></div>
                <div class="item-timeslot"><p><%= time_slot.level %></p></div>
                <div class="item-timeslot"><p><%= time_slot.bookings.size%>/<%= time_slot.group_size %><i class="fas fa-user-friends"></i></p></div>
              </div>
                <div class="collapse" id="collapseExample-<%= time_slot.id %>">
                  <div class="card-body-client">
                  <% time_slot.bookings.each  do |booking| %>
                  <div class="card-slot-details">
                    <div class="item-timeslot"><p> <%= booking.client.first_name%>  <%= booking.client.last_name%></p></div>
                    <% if booking.payment_received %>
                      <div class="item-timeslot-details"><i class="fas fa-check-circle"></i></div>
                    <% else %>
                      <div class="item-timeslot-details"><i class="fas fa-times-circle"></i><p class="impayé" class="width">€</p></div>
                    <% end %>
                  </div>
                <% end %>
                  </div>
                </div>
            <% end %>
        </div>
              <div class="box">
        <div class="clock">
          <span class="seconds"></span>
          <span class="hours"></span>
          <span class="minutes"></span>
        </div>
        <div class="date">
          <div id="daymonth"><%= l Date.today, format: '%d %B' %></div>
        </div>
      </div>

      </div>
        <% end %>
  </div>

</div>
